---
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';
import { translations } from '../../i18n/translations';

const lang = 'fr';
const t = translations[lang];
---

<Layout title="Notre Magasin - Lampari Vertriebs GmbH" lang={lang}>
  <Navigation t={t} currentLang={lang} />
  
  <main class="py-12 bg-gray-50">
    <div class="container mx-auto px-4">
      <h1 class="text-3xl sm:text-4xl font-bold text-gray-800 mb-8 text-center">{t.stores.title}</h1>
      
      <!-- Main Store -->
      <div class="max-w-4xl mx-auto">
        <div class="bg-white rounded-lg shadow-md p-6 sm:p-8" data-aos="fade-up">
          <div class="text-center mb-6">
            <h2 class="text-2xl font-bold text-primary mb-4">{t.stores.mainStore}</h2>
            <p class="text-lg text-gray-600">{t.stores.mainDesc}</p>
          </div>
          
          <div class="grid md:grid-cols-2 gap-8">
            <!-- Contact Information -->
            <div>
              <h3 class="text-xl font-semibold text-gray-800 mb-4">Informations de Contact</h3>
              <div class="space-y-3">
                <div class="flex items-start">
                  <i class="fas fa-map-marker-alt text-primary mt-1 w-6"></i>
                  <div>
                    <p class="font-medium">Adresse:</p>
                    <p class="text-gray-700">Damaschkestraße 31<br>10711 Berlin, Allemagne</p>
                  </div>
                </div>
                <div class="flex items-start">
                  <i class="fas fa-phone text-primary mt-1 w-6"></i>
                  <div>
                    <p class="font-medium">Téléphone:</p>
                    <p class="text-gray-700">
                      <a href="tel:030-33930220" class="hover:text-primary">030 33930220</a>
                    </p>
                  </div>
                </div>
                <div class="flex items-start">
                  <i class="fas fa-envelope text-primary mt-1 w-6"></i>
                  <div>
                    <p class="font-medium">Email:</p>
                    <p class="text-gray-700">
                      <a href="mailto:info@lampari.de" class="hover:text-primary">info@lampari.de</a>
                    </p>
                  </div>
                </div>
              </div>
            </div>

            <!-- Business Hours -->
            <div>
              <h3 class="text-xl font-semibold text-gray-800 mb-4">Heures d'Ouverture</h3>
              <div class="space-y-2">
                <div class="flex justify-between">
                  <span class="font-medium">Lundi - Jeudi:</span>
                  <span class="text-gray-600">9:00 - 18:00</span>
                </div>
                <div class="flex justify-between">
                  <span class="font-medium">Vendredi:</span>
                  <span class="text-gray-600">9:00 - 16:00*</span>
                </div>
                <div class="flex justify-between">
                  <span class="font-medium">Samedi - Dimanche:</span>
                  <span class="text-gray-600">Fermé</span>
                </div>
                <div class="mt-4 p-3 bg-primary/10 rounded-lg">
                  <p class="text-sm text-primary font-medium">
                    <i class="fas fa-info-circle mr-2"></i>
                    *Horaires d'hiver: Vendredi jusqu'à 15:00
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <Footer t={t} />
</Layout>