---
const { t } = Astro.props;
---
<section class="py-8 sm:py-16 bg-white">
  <div class="container mx-auto px-4">
    <div data-aos="fade-up" class="text-center">
      <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold text-gray-800 mb-6 leading-tight">
        {t.welcome.title.replace('Lampari Vertriebs-GmbH', '').trim()} <span class="text-primary">Lampari</span>
      </h1>
      <p class="text-xl sm:text-2xl md:text-3xl text-gray-600 mb-12 leading-relaxed max-w-4xl mx-auto">
        {t.welcome.subtitle}
      </p>

      <slot name="brands-carousel" />

      <!-- Main CTA Sections -->
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 sm:gap-8 mt-16 max-w-4xl mx-auto">
        <!-- Products Section -->
        <div class="bg-gradient-to-br from-white to-gray-50 p-6 sm:p-8 rounded-2xl shadow-lg">
          <div class="bg-primary/10 w-16 h-16 sm:w-20 sm:h-20 rounded-full flex items-center justify-center mx-auto mb-6">
            <i class="fas fa-store text-2xl sm:text-3xl text-primary"></i>
          </div>
          <h2 class="text-xl sm:text-2xl md:text-3xl font-bold text-gray-800 mb-4">{t.products.title}</h2>
          <p class="text-base sm:text-lg text-gray-700 leading-relaxed mb-8">
            {t.products.catalogDesc}
          </p>
          <a 
            href={`/${t.nav.home === 'Home' ? '' : 'de/'}products`}
            class="inline-flex items-center justify-center px-6 py-3 bg-primary text-white rounded-xl hover:bg-primary/90 transition-all duration-300 text-sm sm:text-base font-semibold shadow-lg w-full"
          >
            <i class="fas fa-shopping-basket mr-2"></i>
            {t.nav.products}
          </a>
        </div>

        <!-- Contact Section -->
        <div class="bg-gradient-to-br from-white to-gray-50 p-6 sm:p-8 rounded-2xl shadow-lg">
          <div class="bg-primary/10 w-16 h-16 sm:w-20 sm:h-20 rounded-full flex items-center justify-center mx-auto mb-6">
            <i class="fas fa-envelope text-2xl sm:text-3xl text-primary"></i>
          </div>
          <h2 class="text-xl sm:text-2xl md:text-3xl font-bold text-gray-800 mb-4">{t.contact.title}</h2>
          <p class="text-base sm:text-lg text-gray-700 leading-relaxed mb-8">
            {t.contact.getInTouch}
          </p>
          <a 
            href={`/${t.nav.home === 'Home' ? '' : 'de/'}contacts`}
            class="inline-flex items-center justify-center px-6 py-3 bg-primary text-white rounded-xl hover:bg-primary/90 transition-all duration-300 text-sm sm:text-base font-semibold shadow-lg w-full"
          >
            <i class="fas fa-paper-plane mr-2"></i>
            {t.nav.contacts}
          </a>
        </div>
      </div>

      <!-- Features Grid -->
      <div class="grid grid-cols-1 sm:grid-cols-3 gap-6 sm:gap-8 max-w-6xl mx-auto mt-20">
        <div class="flex flex-col items-center p-6 sm:p-8 bg-gradient-to-br from-white to-primary/5 rounded-2xl shadow-lg">
          <div class="bg-primary/10 w-16 h-16 sm:w-20 sm:h-20 rounded-full flex items-center justify-center mb-4">
            <i class="fas fa-certificate text-primary text-2xl sm:text-3xl"></i>
          </div>
          <h3 class="text-xl sm:text-2xl font-bold text-gray-800 mb-3 text-center">{t.features.certified.title}</h3>
          <p class="text-base sm:text-lg text-gray-600 text-center leading-relaxed">{t.features.certified.description}</p>
        </div>
        <div class="flex flex-col items-center p-6 sm:p-8 bg-gradient-to-br from-white to-primary/5 rounded-2xl shadow-lg">
          <div class="bg-primary/10 w-16 h-16 sm:w-20 sm:h-20 rounded-full flex items-center justify-center mb-4">
            <i class="fas fa-truck text-primary text-2xl sm:text-3xl"></i>
          </div>
          <h3 class="text-xl sm:text-2xl font-bold text-gray-800 mb-3 text-center">{t.features.delivery.title}</h3>
          <p class="text-base sm:text-lg text-gray-600 text-center leading-relaxed">{t.features.delivery.description}</p>
        </div>
        <div class="flex flex-col items-center p-6 sm:p-8 bg-gradient-to-br from-white to-primary/5 rounded-2xl shadow-lg">
          <div class="bg-primary/10 w-16 h-16 sm:w-20 sm:h-20 rounded-full flex items-center justify-center mb-4">
            <i class="fas fa-heart text-primary text-2xl sm:text-3xl"></i>
          </div>
          <h3 class="text-xl sm:text-2xl font-bold text-gray-800 mb-3 text-center">{t.features.satisfaction.title}</h3>
          <p class="text-base sm:text-lg text-gray-600 text-center leading-relaxed">{t.features.satisfaction.description}</p>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .text-primary {
    color: #C5A572;
  }
</style>