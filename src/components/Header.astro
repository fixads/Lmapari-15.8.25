<header class="bg-gradient-to-r from-primary/10 to-primary/5 py-8 sm:py-16 px-4">
  <div class="container mx-auto">
    <div class="text-center max-w-4xl mx-auto">
      <h1 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold text-gray-800 mb-3 sm:mb-4 leading-tight">
        <span class="text-primary">Lampari</span> Vertriebs GmbH
      </h1>
      <p class="text-base sm:text-lg md:text-xl lg:text-2xl text-gray-600 mb-6 leading-relaxed">
        Your trusted source for kosher food in Berlin, Germany and Europe
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="#products" 
          class="inline-flex items-center justify-center px-6 py-3 bg-primary text-white rounded-lg hover:bg-primary/90 transition-colors duration-300 text-sm sm:text-base"
        >
          <i class="fas fa-store mr-2"></i>
          Explore Our Products
        </a>
        <a 
          href="#contact" 
          class="inline-flex items-center justify-center px-6 py-3 bg-white text-primary border-2 border-primary rounded-lg hover:bg-primary/5 transition-colors duration-300 text-sm sm:text-base"
        >
          <i class="fas fa-envelope mr-2"></i>
          Contact Us
        </a>
      </div>
      <div class="mt-6 sm:mt-8 flex flex-col sm:flex-row justify-center gap-4 sm:gap-6">
        <div class="flex items-center justify-center">
          <i class="fas fa-check-circle text-primary text-lg sm:text-xl mr-2"></i>
          <span class="text-sm sm:text-base text-gray-700">Certified Kosher</span>
        </div>
        <div class="flex items-center justify-center">
          <i class="fas fa-shipping-fast text-primary text-lg sm:text-xl mr-2"></i>
          <span class="text-sm sm:text-base text-gray-700">Europe-wide Delivery</span>
        </div>
        <div class="flex items-center justify-center">
          <i class="fas fa-award text-primary text-lg sm:text-xl mr-2"></i>
          <span class="text-sm sm:text-base text-gray-700">Premium Quality</span>
        </div>
      </div>
    </div>
  </div>
</header>

<style>
  .text-primary {
    color: #C5A572;
  }
</style>