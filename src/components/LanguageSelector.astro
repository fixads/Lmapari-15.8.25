---
const { currentLang } = Astro.props;
---
<div class="fixed top-4 right-4 z-50">
  <div class="bg-white rounded-lg shadow-md px-3 py-2 flex gap-2">
    <a href="/" class={`text-sm font-medium ${currentLang === 'en' ? 'text-primary' : 'text-gray-500 hover:text-primary'}`}>EN</a>
    <span class="text-gray-300">|</span>
    <a href="/de" class={`text-sm font-medium ${currentLang === 'de' ? 'text-primary' : 'text-gray-500 hover:text-primary'}`}>DE</a>
  </div>
</div>