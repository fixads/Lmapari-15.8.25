---
const { t } = Astro.props;
---
<section class="py-8 sm:py-16 bg-secondary">
  <div class="container mx-auto px-4">
    <div data-aos="fade-up" data-aos-delay="100">
      <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold text-primary mb-8 sm:mb-12 text-center">{t.about.title}</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 sm:gap-12">
        <div class="bg-white p-6 sm:p-8 rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
          <div class="bg-primary/10 w-16 h-16 sm:w-20 sm:h-20 rounded-full flex items-center justify-center mb-6">
            <i class="fas fa-star text-2xl sm:text-3xl text-primary"></i>
          </div>
          <p class="text-base sm:text-lg text-gray-700 leading-relaxed">
            {t.about.history}
          </p>
        </div>
        <div class="bg-white p-6 sm:p-8 rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
          <div class="bg-primary/10 w-16 h-16 sm:w-20 sm:h-20 rounded-full flex items-center justify-center mb-6">
            <i class="fas fa-handshake text-2xl sm:text-3xl text-primary"></i>
          </div>
          <p class="text-base sm:text-lg text-gray-700 leading-relaxed">
            {t.about.partnership}
          </p>
        </div>
      </div>
    </div>
  </div>
</section>