---
const { t } = Astro.props;
---
<section class="py-4">
  <div class="container mx-auto">
    <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold text-primary mb-6 sm:mb-8 text-center">
      {t.brands?.title || 'Our Trusted Brands'}
    </h2>
    
    <div class="swiper brands-carousel">
      <div class="swiper-wrapper">
        <div class="swiper-slide">
          <div class="flex items-center justify-center h-20 sm:h-24 bg-gradient-to-br from-white to-gray-50 rounded-2xl p-4 sm:p-6 shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
            <img src="/images/brands/brand-1.png" alt="Brand 1" class="max-h-full max-w-full object-contain" />
          </div>
        </div>
        <div class="swiper-slide">
          <div class="flex items-center justify-center h-20 sm:h-24 bg-gradient-to-br from-white to-gray-50 rounded-2xl p-4 sm:p-6 shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
            <img src="/images/brands/brand-2.png" alt="Brand 2" class="max-h-full max-w-full object-contain" />
          </div>
        </div>
        <div class="swiper-slide">
          <div class="flex items-center justify-center h-20 sm:h-24 bg-gradient-to-br from-white to-gray-50 rounded-2xl p-4 sm:p-6 shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
            <img src="/images/brands/brand-3.png" alt="Brand 3" class="max-h-full max-w-full object-contain" />
          </div>
        </div>
        <div class="swiper-slide">
          <div class="flex items-center justify-center h-20 sm:h-24 bg-gradient-to-br from-white to-gray-50 rounded-2xl p-4 sm:p-6 shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
            <img src="/images/brands/brand-4.png" alt="Brand 4" class="max-h-full max-w-full object-contain" />
          </div>
        </div>
        <div class="swiper-slide">
          <div class="flex items-center justify-center h-20 sm:h-24 bg-gradient-to-br from-white to-gray-50 rounded-2xl p-4 sm:p-6 shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
            <img src="/images/brands/brand-5.png" alt="Brand 5" class="max-h-full max-w-full object-contain" />
          </div>
        </div>
        <div class="swiper-slide">
          <div class="flex items-center justify-center h-20 sm:h-24 bg-gradient-to-br from-white to-gray-50 rounded-2xl p-4 sm:p-6 shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
            <img src="/images/brands/brand-6.png" alt="Brand 6" class="max-h-full max-w-full object-contain" />
          </div>
        </div>
      </div>
      <div class="swiper-pagination mt-2"></div>
      <div class="swiper-button-prev hidden sm:flex"></div>
      <div class="swiper-button-next hidden sm:flex"></div>
    </div>
  </div>
</section>

<style>
  .swiper-button-next,
  .swiper-button-prev {
    color: #C5A572;
    transform: scale(0.7);
  }

  .swiper-button-next::after,
  .swiper-button-prev::after {
    font-size: 1.5rem;
  }

  .swiper-pagination-bullet-active {
    background: #C5A572;
  }

  .swiper-pagination {
    position: relative;
    bottom: 0;
  }

  @media (max-width: 640px) {
    .swiper-button-next,
    .swiper-button-prev {
      display: none;
    }
  }
</style>

<script>
  import Swiper from 'swiper';
  import { Navigation, Pagination, Autoplay } from 'swiper/modules';
  import 'swiper/css';
  import 'swiper/css/navigation';
  import 'swiper/css/pagination';

  new Swiper('.brands-carousel', {
    modules: [Navigation, Pagination, Autoplay],
    slidesPerView: 1.2,
    spaceBetween: 12,
    centeredSlides: true,
    loop: true,
    autoplay: {
      delay: 3000,
      disableOnInteraction: false,
    },
    pagination: {
      el: '.swiper-pagination',
      clickable: true,
    },
    navigation: {
      nextEl: '.swiper-button-next',
      prevEl: '.swiper-button-prev',
    },
    breakpoints: {
      640: {
        slidesPerView: 2,
        spaceBetween: 16,
        centeredSlides: false,
      },
      1024: {
        slidesPerView: 3,
        spaceBetween: 20,
        centeredSlides: false,
      },
    },
  });
</script>