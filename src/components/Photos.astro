---
const { t } = Astro.props;

const photos = [
  {
    src: "/images/store-front.jpg",
    alt: "Kosher food market",
    caption: "we are in news"
  },
  {
    src: "/images/fresh-products.jpg",
    alt: "Fresh kosher products",
    caption: "Fresh products selection"
  },
  {
    src: "/images/wine-collection.jpg",
    alt: "Kosher wine selection",
    caption: "Our wine collection"
  },
  {
    src: "/images/specialty-products.jpg",
    alt: "Specialty products",
    caption: "Specialty products"
  }
];
---
<section class="py-8 sm:py-16 bg-white">
  <div class="container mx-auto px-4">
    <div data-aos="fade-up" data-aos-delay="200">
      <h2 class="text-xl sm:text-2xl md:text-3xl font-bold text-primary mb-4 sm:mb-6 md:mb-8 text-center">Photo Gallery</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 sm:gap-6">
        {photos.map((photo) => (
          <div class="relative overflow-hidden rounded-lg shadow-md">
            <img 
              src={photo.src} 
              alt={photo.alt}
              loading="lazy"
              class="w-full h-48 sm:h-56 md:h-64 object-cover"
            />
            <div class="absolute bottom-0 left-0 right-0 bg-black bg-opacity-50 text-white p-2 sm:p-3">
              <p class="text-xs sm:text-sm text-center">{photo.caption}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>